<!DOCTYPE html>
<html>
<head>
  <title>PeriwinkleBlue</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class="<%= "#{controller.controller_name} #{controller.action_name}" %>">
  <header>
    <div class="navbar">
      <div id="header-left" class="col-xs-6">
        <%= link_to 'Periwinkle Blue', root_path %>
      </div>
      <div id="header-right" class="col-xs-6">
        <% if user_signed_in? %>
          <%= link_to 'View Games', games_path, :class => 'btn btn-default' %>
          <%= link_to 'Log Off', destroy_user_session_path, :method => :delete, :class => 'btn btn-default' %>
        <% else %>
          <%= link_to 'Sign In', new_user_session_path, :class => 'btn btn-default'%>
          <%= link_to 'Sign Up', new_user_registration_path, :class => 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </header>

  <% if notice.present? %>
    <p class="alert alert-info text-center"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="alert alert-danger text-center"><%= alert %></p>
  <% end %>
  <script>$( ".alert" ).fadeOut(7000);</script>

  <%= yield %>

  <footer>
    <div class="col-xs-10 col-xs-offset-1 container">
      <div class="col-xs-12 col-sm-4">
        <%= link_to 'Home', root_path %>
      </div>
      <div class="col-xs-12 col-sm-4">
        <%= link_to 'How to Play', '#' %>
      </div>
      <div class="col-xs-12 col-sm-4">
        <%= link_to 'Contact Us', '#' %>
      </div>
    </div>
  </footer>

</body>
</html>
