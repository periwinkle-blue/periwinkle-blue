<div class="container gamelist">
	<div class="col-xs-10 col-xs-offset-1 text-center">
		<div class="row">
			<h2>My Games</h2>
		</div>
		<div class="row">
			<div class="col-xs-4">
				<h3>Game Number</h3>
			</div>
			<div class="col-xs-4">
				<h3>Opponent</h3>
			</div>
			<div class="col-xs-4">
				<h3>Status</h3>
			</div>
		</div>
		<% @own_games_joined.each do |game| %>
			<div class="game row">
					<div class="col-xs-4">
						<%= game.id %>
					</div>
					<div class="col-xs-4">
						<%= game.white_player_id %>
					</div>
					<div class="col-xs-4">
						<%= link_to "Play Now", game, :class => 'btn btn-default btn-sm' %> 
					</div>
				</div>
		<% end %>
		<% @own_games_created.each do |game| %>
			<div class="game row">
					<div class="col-xs-4">
						<%= game.id %>
					</div>
					<div class="col-xs-4">
						<%= game.black_player_id %>
					</div>
					<div class="col-xs-4">
						Awaiting Opponent
					</div>
				</div>
		<% end %>
	</div>
	<div class="col-xs-10 col-xs-offset-1 text-center">		
		<div class="row">
			<h2>Open Games</h2>
		</div>
		<div class="row">
			<div class="col-xs-4">
				<h3>Game Number</h3>
			</div>
			<div class="col-xs-4">
				<h3>First Player</h3>
			</div>
			<div class="col-xs-4">
				<h3>Join</h3>
			</div>
		</div>
		<% @open_games.each do |game| %>
			<div class="game row">
				<div class="col-xs-4">
					<%= game.id %>
				</div>
				<div class="col-xs-4">
					<%= game.white_player_id %>
				</div>
				<div class="col-xs-4">
					<%= link_to "Join", join_game_path(game.id), :method => :patch, :class => 'btn btn-default btn-sm' %> 
				</div>
			</div>
		<% end %>
	</div>
</div>
